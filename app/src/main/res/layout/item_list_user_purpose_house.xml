<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">
    <LinearLayout
        style="@style/puchase_house_llayou_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="委托时间：" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.5.4" />
    </LinearLayout>

    <LinearLayout
        style="@style/puchase_house_llayou_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="意向片区：" />

        <TextView
            android:id="@+id/tv_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卧龙小城" />
    </LinearLayout>

    <LinearLayout
        style="@style/puchase_house_llayou_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="意向小区：" />

        <TextView
            android:id="@+id/tv_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啊啊啊啊" />
    </LinearLayout>

    <LinearLayout
        style="@style/puchase_house_llayou_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="期望居室：" />

        <TextView
            android:id="@+id/tv_layout"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="五室"
            android:textColor="@color/my_orange_one" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="期望面积：" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="70-89平米"
            android:textColor="@color/my_orange_one" />
    </LinearLayout>

    <LinearLayout
        style="@style/puchase_house_llayou_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="资金预算：" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="200-250万"
            android:textColor="@color/my_orange_one" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="其他说明：" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="点击查看详情"
            android:textColor="@color/my_gray_three" />
    </LinearLayout>

    <GridView
        android:id="@+id/gv_brokers"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tool:listitem="@layout/item_entrus_brokers"
        android:numColumns="5"/>

    <ImageView style="@style/divider_thin"
        android:layout_marginTop="10dp"/>
</LinearLayout>