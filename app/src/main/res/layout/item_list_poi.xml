<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edt_height"
        android:minHeight="@dimen/login_edt_height"
        android:layout_marginStart="@dimen/login_margin"
        android:layout_marginEnd="@dimen/login_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/my_black_two"
            android:textSize="@dimen/moments_poi_search"/>
        <TextView
            android:id="@+id/tv_poi_adress"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_sms_lock"
            android:textSize="@dimen/moments_txt_size"/>
    </LinearLayout>

    <ImageView
        style="@style/divider_thin"/>
</LinearLayout>