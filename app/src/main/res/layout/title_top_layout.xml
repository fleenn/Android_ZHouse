<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_top_layout"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="@color/title_top_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/title_top_left_icon"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/default_space"
        android:scaleType="fitStart" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_top_searchVirtualLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="输入搜索的入口虚拟图片布局"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_top_titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="标题内容"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <EditText
            android:id="@+id/title_top_searchET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_top_home_search_bg"
            android:drawableLeft="@drawable/title_top_home_search_icon"
            android:gravity="center_vertical|left"
            android:hint="@string/title_top_search_hiht"
            android:textColor="@color/title_top_search_content"
            android:textColorHint="@color/title_top_search_hiht" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/title_top_right_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/title_top_right_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white" />
    </FrameLayout>

</LinearLayout>
