<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/loadmore_list_footer_layout_progressLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/loadmore_list_footer_layout_load_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat" />

        <TextView
            android:id="@+id/loadmore_list_footer_layout_load_titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:singleLine="true"
            android:text="@string/geolo_listview_pull_loadmore_title"
            android:textColor="@color/geolo_common_black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/loadmore_list_footer_layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:singleLine="true"
        android:text="点击加载更多"
        android:textColor="@color/geolo_common_black"
        android:textSize="14sp" />

</LinearLayout>