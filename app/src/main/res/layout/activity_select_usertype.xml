<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView style="@style/login_top_img" />

    <TextView
        android:id="@+id/txt_type_broker"
        style="@style/select_usertype_txt"
        android:background="@color/my_orange_four"
        android:drawableLeft="@drawable/select_usertype_broker"
        android:text="注册经纪人" />

    <TextView
        android:id="@+id/txt_type_user"
        style="@style/select_usertype_txt"
        android:background="@color/blue"
        android:drawableLeft="@drawable/select_usertype_user"
        android:text="注册客户" />

    <Button
        android:id="@+id/btn_back"
        style="@style/login_btn_style"
        android:layout_marginTop="@dimen/my_margin"
        android:background="@drawable/shape_btn_normal"
        android:text="@string/back"
        android:textColor="@color/my_gray_one" />

</LinearLayout>