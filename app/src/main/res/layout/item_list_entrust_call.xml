<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="213.3dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/my_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_margin">

                <TextView
                    style="@style/entrust_call_txt_key"
                    android:text="需求类型：" />

                <TextView
                    style="@style/entrust_call_txt_value"
                    android:text="租" />

                <TextView
                    style="@style/entrust_call_txt_key"
                    android:layout_marginLeft="50dp"
                    android:text="支付佣金：" />

                <TextView
                    style="@style/entrust_call_txt_value"
                    android:text="10天" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_margin">

                <TextView
                    style="@style/entrust_call_txt_key"
                    android:text="语音：" />

                <ImageView style="@style/entrust_call_img" />

                <TextView
                    style="@style/entrust_call_txt_key"
                    android:layout_marginLeft="70dp"
                    android:text="委托时间：" />

                <TextView
                    style="@style/entrust_call_txt_value"
                    android:text="2016.05.06" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/call_entrust_delete"
            style="@style/entrust_delete_rlayout">

            <TextView style="@style/entrust_delete_txt" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/my_margin">

        <TextView
            style="@style/entrust_call_txt"
            android:ellipsize="end"
            android:maxEms="24"
            android:singleLine="true"
            android:text="精装两房-不容错过天大圣的的上地位较低额的卧房 v积分定价高" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            style="@style/divider_thin_bottom"
            android:layout_marginLeft="@dimen/my_margin" />
    </RelativeLayout>

</LinearLayout>