<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/rlayout_user_avatar"
        style="@style/rlayout_right_style"
        android:layout_height="@dimen/mine_person_height">

        <TextView
            style="@style/mine_personal_txt_left"
            android:text="头像" />

        <ImageView
            android:id="@+id/img_user_avatar"
            style="@style/img_header_style_one"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mine_txt_right"
            android:scaleType="centerCrop" />

        <ImageView style="@style/img_more_style" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_user_alias"
        style="@style/rlayout_right_style">

        <TextView
            style="@style/mine_personal_txt_left"
            android:text="昵称" />

        <TextView
            android:id="@+id/txt_user_name"
            style="@style/user_mine_txt_three" />

        <ImageView style="@style/img_more_style" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_user_sex"
        style="@style/rlayout_right_style">

        <TextView
            style="@style/mine_personal_txt_left"
            android:text="性别" />

        <TextView
            android:id="@+id/txt_user_sex"
            style="@style/user_mine_txt_three" />

        <ImageView style="@style/img_more_style" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout style="@style/rlayout_right_style">

        <TextView
            style="@style/mine_personal_txt_left"
            android:text="联系电话" />

        <TextView
            android:id="@+id/txt_user_phone"
            style="@style/user_mine_txt_four" />
    </RelativeLayout>

    <ImageView style="@style/divider_thin" />

    <View style="@style/space_fill_style" />

</LinearLayout>