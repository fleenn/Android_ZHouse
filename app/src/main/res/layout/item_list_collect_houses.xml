<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/collect_house_bottom"
        android:layout_marginLeft="@dimen/my_margin">

        <LinearLayout
            android:id="@+id/llayout_house_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/my_margin"
                android:paddingTop="@dimen/my_margin">

                <ImageView
                    android:id="@+id/img_house_picture"
                    android:layout_width="@dimen/collect_house_img_width"
                    android:layout_height="@dimen/collect_house_img_height" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/my_margin">

                <TextView
                    android:id="@+id/txt_house_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:textColor="@color/my_black_two"
                    android:textSize="@dimen/txt_three_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_house_village"
                            style="@style/collect_house_gray_txt" />

                        <TextView
                            android:id="@+id/txt_house_style"
                            style="@style/collect_house_gray_txt"
                            android:layout_marginRight="@dimen/my_margin" />

                        <TextView
                            android:id="@+id/txt_house_decorate"
                            style="@style/collect_house_gray_txt" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_house_road"
                            style="@style/collect_house_gray_txt"
                            android:ellipsize="end"
                            android:maxEms="5"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/txt_house_acreage"
                            style="@style/collect_house_gray_txt" />

                        <TextView
                            android:id="@+id/txt_house_orientation"
                            style="@style/collect_house_gray_txt" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlayout_house_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/my_margin"
                android:paddingTop="@dimen/my_margin"
                android:visibility="gone">

                <TextView
                    style="@style/collect_house_orange_txt"
                    android:text="@string/delete" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/txt_house_price"
                    style="@style/collect_house_orange_txt" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <ImageView style="@style/divider_thin_bottom" />

</RelativeLayout>