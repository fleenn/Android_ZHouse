<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_orange" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="提示：请选择一个小区"
        android:paddingLeft="16dp"/>

    <ImageView style="@style/divider_thick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_district_left"
            style="@style/list_view_area"
            android:layout_width="@dimen/mine_state_width" />

        <ImageView style="@style/divider_vertical_full" />

        <ListView
            android:id="@+id/list_district_right"
            style="@style/list_view_area"
            android:choiceMode="multipleChoice" />
    </LinearLayout>

</LinearLayout>