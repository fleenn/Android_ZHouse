<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ImageView style="@style/divider_thick" />

    <RelativeLayout
        android:id="@+id/rlayout_find_pwd"
        style="@style/setting_line_rlayout">

        <TextView
            style="@style/setting_line_txt_left"
            android:text="忘记密码" />

        <ImageView style="@style/img_more_style" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_clear_cache"
        style="@style/setting_line_rlayout">

        <TextView
            style="@style/setting_line_txt_left"
            android:text="清除缓存（点击）" />

        <TextView
            android:id="@+id/txt_cache"
            style="@style/setting_line_txt_right"
            android:text="0.0M" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/setting_line_rlayout">

        <TextView
            style="@style/setting_line_txt_left"
            android:text="消息免打扰" />

        <Button
            android:id="@+id/btn_not_disturb"
            style="@style/setting_switch_style" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/setting_line_rlayout">

        <TextView
            style="@style/setting_line_txt_left"
            android:text="2G/3G/4G下自动接收图片" />

        <Button
            android:id="@+id/btn_accept_picture"
            style="@style/setting_switch_style" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/setting_line_rlayout">

        <TextView
            style="@style/setting_line_txt_left"
            android:text="推送通知" />

        <Button
            android:id="@+id/btn_push_notification"
            style="@style/setting_switch_style" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_feedback"
        style="@style/setting_line_rlayout">

        <TextView
            style="@style/setting_line_txt_left"
            android:text="意见反馈" />

        <ImageView style="@style/img_more_style" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_current_edition"
        style="@style/setting_line_rlayout">

        <TextView
            style="@style/setting_line_txt_left"
            android:text="当前版本" />

        <TextView
            android:id="@+id/tv_version"
            style="@style/setting_line_txt_right"
            android:text="2.0.1" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_about_us"
        style="@style/setting_line_rlayout">

        <TextView
            style="@style/setting_line_txt_left"
            android:text="关于我们" />

        <ImageView style="@style/img_more_style" />
    </RelativeLayout>

    <ImageView style="@style/divider_thin" />

    <View
        style="@style/space_fill_style"
        android:layout_height="70dp" />

    <LinearLayout
        android:id="@+id/llayout_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/space_fill_style"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38.6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="退出账号"
                android:textColor="@color/my_orange_two"
                android:textSize="@dimen/title_txt_size" />
        </RelativeLayout>

        <View
            style="@style/space_fill_style"
            android:layout_height="10dp" />
    </LinearLayout>

    <View style="@style/space_fill_style" />
</LinearLayout>