<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlayout_house_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/my_margin">

            <ImageView
                android:id="@+id/img_house_icon"
                style="@style/grab_house_picture" />

            <ImageView
                android:id="@+id/img_type_rent"
                style="@style/grab_house_mask"
                android:src="@drawable/icon_mask_rent" />

            <ImageView
                android:id="@+id/img_type_sell"
                style="@style/grab_house_mask"
                android:src="@drawable/icon_mask_sell"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/grab_house_height"
            android:layout_marginTop="@dimen/my_margin"
            android:layout_toRightOf="@+id/rlayout_house_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_communicate"
                style="@style/grab_house_txt"
                android:layout_alignParentTop="true"
                android:text="卧龙晓城"
                android:textSize="@dimen/txt_four_size" />

            <TextView
                android:id="@+id/tv_layout"
                style="@style/grab_house_txt"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="3室2厅2卫1阳"
                android:textColor="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_area"
                    style="@style/grab_house_txt"
                    android:text="150"
                    android:textColor="@color/gray" />

                <TextView
                    style="@style/grab_house_txt"
                    android:layout_marginEnd="@dimen/my_margin"
                    android:text="㎡"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/grab_house_txt"
                    android:text="450万"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                 <ImageView
                    android:id="@+id/img_grab_chat"
                    style="@style/grab_chat_icon"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_grab_status"
                    style="@style/grab_icon_style"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/my_margin">

        <TextView
            android:id="@+id/tv_customer_name"
            style="@style/grab_house_txt"
            android:layout_width="106.7dp"
            android:layout_marginLeft="@dimen/my_margin"
            android:text="张小花" />

        <TextView
            style="@style/grab_house_txt"
            android:text="联系电话：" />

        <TextView
            android:id="@+id/tv_tel"
            style="@style/grab_house_txt"
            android:text="抢单成功后可见" />
    </LinearLayout>

    <ImageView
        style="@style/divider_thin"
        android:layout_marginLeft="@dimen/my_margin" />
</LinearLayout>