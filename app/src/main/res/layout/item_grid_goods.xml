<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_goods_item"
    android:layout_width="wrap_content"
    android:layout_height="79.5dp"
    android:background="@color/underline_color_low">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/goods_item_height"
        android:layout_margin="0.3dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_goods_name"
            style="@style/gold_coin_goods_name"
            android:layout_marginLeft="@dimen/my_margin" />

        <TextView
            android:id="@+id/txt_goods_coin"
            style="@style/gold_coin_number"
            android:layout_marginBottom="@dimen/my_margin"
            android:layout_marginLeft="@dimen/my_margin" />

        <ImageView
            android:id="@+id/img_goods_picture"
            style="@style/gold_coin_goods_img" />
    </RelativeLayout>
</RelativeLayout>