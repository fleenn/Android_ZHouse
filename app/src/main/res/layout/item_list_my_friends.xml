<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlayout_group_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_friends_group_height"
        android:background="@color/divider_color"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/my_margin"
            android:textColor="@color/my_gray_three"
            android:textSize="@dimen/txt_three_size" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

    <RelativeLayout style="@style/friend_rlayout_style">

        <ImageView
            android:id="@+id/img_child_head"
            style="@style/friend_img_avatar" />

        <TextView
            android:id="@+id/txt_child_name"
            style="@style/friend_txt_name" />

        <ImageView style="@style/divider_thin_bottom" />
    </RelativeLayout>

</LinearLayout>