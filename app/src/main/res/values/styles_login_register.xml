<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_top_img">//登录、注册、选择用户类型中最上面图片的样式
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/bg_login</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="login_top_title">//登录、注册、忘记密码标题字体的样式
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_txt_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="login_zfb_icon">//登录、注册、忘记密码中住房邦图标的样式
        <item name="android:layout_width">@dimen/zfb_image_width</item>
        <item name="android:layout_height">@dimen/zfb_image_height</item>
        <item name="android:src">@drawable/zfb_icon</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="login_icon_style">//登录、注册、忘记密码所有输入框前面的小图标的样式
        <item name="android:layout_width">@dimen/img_width</item>
        <item name="android:layout_height">@dimen/img_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_margin">@dimen/login_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="login_input_box">//登录、注册、忘记密码所有输入框的样式
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/login_label_text_size</item>
        <item name="android:textColor">@color/show_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="login_pop_message">//登录、注册、忘记密码所有弹出信息的样式
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/login_label_text_size</item>
        <item name="android:textColor">@color/my_orange_one</item>
    </style>

    <style name="login_btn_style">//登录、注册、忘记密码所有按钮的样式
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">@dimen/login_margin</item>
        <item name="android:layout_marginRight">@dimen/login_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_txt_size</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="login_warm_icon">//登录、注册、忘记密码警告图标的样式
        <item name="android:layout_width">@dimen/img_width</item>
        <item name="android:layout_height">@dimen/img_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/login_margin</item>
        <item name="android:layout_marginRight">@dimen/login_margin</item>
        <item name="android:src">@drawable/login_warm</item>
    </style>

    <style name="login_get_verification">//登录、注册、忘记密码获取验证码按钮的样式
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_btn_sms</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">13.3dp</item>
        <item name="android:textSize">@dimen/login_label_text_size</item>
        <item name="android:textColor">@color/show_color</item>
    </style>

    <style name="login_choose_linear_layout">//登录、注册选择身份的LinearLayout的样式
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="login_choose_identity">//登录、注册选择身份字体的样式
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/txt_two_size</item>
        <item name="android:textColor">@drawable/selector_identity_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/choose_icon_right</item>
    </style>

    <style name="login_hint_text">//登录提示文字的样式
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/login_label_text_size</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="split">//登录、注册分割线
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/underline_color</item>
    </style>

    <style name="select_usertype_txt">//选择用户类型页面中用户类型文字的样式
        <item name="android:layout_width">333.3dp</item>
        <item name="android:layout_height">119.7dp</item>
        <item name="android:textSize">23.3sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/my_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawablePadding">52dp</item>
    </style>

</resources>