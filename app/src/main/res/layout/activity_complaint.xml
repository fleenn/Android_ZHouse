<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        style="@style/space_fill_style"
        android:layout_height="@dimen/my_height">

        <TextView
            style="@style/friend_manage_hint_txt"
            android:text="请选择投诉原因" />
    </RelativeLayout>

    <ImageView style="@style/divider_thin" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/complaint_margin">

        <RadioButton
            android:id="@+id/rbtn_one"
            style="@style/complaint_radio_button" />

        <RadioButton
            android:id="@+id/rbtn_two"
            style="@style/complaint_radio_button" />

        <RadioButton
            android:id="@+id/rbtn_three"
            style="@style/complaint_radio_button" />

        <RadioButton
            android:id="@+id/rbtn_four"
            style="@style/complaint_radio_button" />

        <RadioButton
            android:id="@+id/rbtn_five"
            style="@style/complaint_radio_button" />
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/rlayout_complaint_other"
        style="@style/complaint_rlayout_style">

        <TextView
            android:id="@+id/txt_other"
            style="@style/setting_line_txt_left" />

        <ImageView style="@style/img_more_style" />
    </RelativeLayout>

    <ImageView style="@style/divider_thin" />

</LinearLayout>